# Environment variables for Flask Blog Application
# Copy this file to .env and set your actual values

# Flask Secret Key - Generate a secure random string for production
SECRET_KEY=your-secret-key-here

# Database Configuration
# For SQLite (development)
DATABASE_URI=sqlite:///posts.db
# For PostgreSQL (production example)
# DATABASE_URI=postgresql://username:password@localhost/blog_db

# Flask Configuration
FLASK_DEBUG=False
PORT=5001

# Optional: Email configuration for contact functionality (Day 60)
# MAIL_ADDRESS=your-email@gmail.com
# MAIL_APP_PW=your-app-password
